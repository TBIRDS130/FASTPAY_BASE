<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ActivationActivity">
    
    <!-- Animated Neon Grid Background -->
    <com.example.fast.ui.GridBackgroundView
        android:id="@+id/gridBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Animated Scanline Effect -->
    <com.example.fast.ui.ScanlineView
        android:id="@+id/scanlineView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Activation Progress Overlay -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activationProgressOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#B3000000"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/activationProgressCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/crypto_hash_card_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.5"
            android:layout_margin="24dp">

            <TextView
                android:id="@+id/activationProgressTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACTIVATION"
                android:textAllCaps="true"
                android:fontFamily="monospace"
                android:textColor="@color/theme_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:letterSpacing="0.06" />

            <TextView
                android:id="@+id/activationProgressStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Preparing..."
                android:fontFamily="monospace"
                android:textColor="@color/theme_primary"
                android:textSize="12sp"
                android:alpha="0.8"
                android:letterSpacing="0.04" />

            <LinearLayout
                android:id="@+id/activationProgressSteps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/activationStepValidate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Validating"
                    android:fontFamily="monospace"
                    android:textColor="@color/theme_primary"
                    android:textSize="12sp"
                    android:alpha="0.6" />

                <TextView
                    android:id="@+id/activationStepRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="• Registering"
                    android:fontFamily="monospace"
                    android:textColor="@color/theme_primary"
                    android:textSize="12sp"
                    android:alpha="0.6" />

                <TextView
                    android:id="@+id/activationStepSync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="• Syncing"
                    android:fontFamily="monospace"
                    android:textColor="@color/theme_primary"
                    android:textSize="12sp"
                    android:alpha="0.6" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/activationRetryContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/activationRetryStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Retrying in 5s..."
                    android:fontFamily="monospace"
                    android:textColor="@color/theme_primary"
                    android:textSize="11sp"
                    android:alpha="0.8" />

                <Button
                    android:id="@+id/activationRetryNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RETRY NOW"
                    android:fontFamily="monospace"
                    android:textAllCaps="true"
                    android:textSize="10sp"
                    android:textColor="@color/theme_primary"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Background overlay for activated state -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient2"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Guideline for logo positioning at 0% from top (moved up 20%) -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/logoPositionGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.0" />

    <!-- Header Section - Logo fixed at 20% from top (Logo + Tagline) -->
    <LinearLayout
        android:id="@+id/headerSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingHorizontal="16dp"
        android:paddingTop="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/logoPositionGuide">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="@string/app_name_title"
            android:textColor="@color/theme_primary"
            android:textSize="48sp"
            android:textStyle="bold"
            android:letterSpacing="0.04"
            android:textAllCaps="true"
            android:shadowColor="@color/theme_primary"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="30"
            android:transitionName="logo_transition"
            android:tag="activation_logo" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="monospace"
            android:text="[SYSTEM_ACTIVATION]"
            android:textColor="@color/theme_primary"
            android:textSize="12sp"
            android:letterSpacing="0.03"
            android:alpha="0.7"
            android:shadowColor="@color/theme_primary"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:transitionName="tagline_transition"
            android:tag="activation_tagline" />
    </LinearLayout>

    <!-- Guideline for input field positioning - moved up 20% (from 42% to 22%) -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/inputPositionGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.22" />

        <!-- Center Content - Phone input & Activate button -->
    <ScrollView
        android:id="@+id/centerContentScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/inputPositionGuide">

        <LinearLayout
            android:id="@+id/centerContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="32dp"
            android:paddingBottom="32dp"
            android:layout_gravity="center"
            android:clipChildren="false"
            android:clipToPadding="false">

        <!-- Crypto Hash Card Container with Outer Border Wrapper -->
        <FrameLayout
            android:id="@+id/cryptoHashCardWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:layout_marginBottom="@dimen/button_margin_top"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:transitionName="card_wrapper_transition">
            
            <!-- Crypto Hash Card Container -->
            <FrameLayout
                android:id="@+id/cryptoHashCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/crypto_hash_card_background"
                android:padding="16dp"
                android:elevation="4dp"
                android:layout_margin="0dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:transitionName="card_transition">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Header: CRYPTO HASH Label and SHA256 Badge -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/cryptoHashLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="#123 ALWAYS SECURE"
                        android:fontFamily="monospace"
                        android:textColor="@color/theme_primary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05" />

                <TextView
                        android:id="@+id/sha256Badge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SHA256"
                        android:fontFamily="monospace"
                        android:textColor="@color/theme_primary"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:background="@drawable/sha256_badge_background"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp" />
                </LinearLayout>

                <!-- Login Type Selector: TESTING / RUNNING -->
                <LinearLayout
                    android:id="@+id/loginTypeSelector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/login_type_selector_background"
                    android:layout_marginBottom="12dp"
                    android:gravity="center"
                    android:padding="0dp">

                    <FrameLayout
                        android:id="@+id/testingButtonContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/login_type_button_background"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/testingButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="TESTING"
                            android:fontFamily="monospace"
                            android:textColor="@color/theme_primary"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.05" />
                    </FrameLayout>

                    <!-- Divider Line -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="8dp"
                        android:background="@drawable/login_type_divider" />

                    <FrameLayout
                        android:id="@+id/runningButtonContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/login_type_button_background"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/runningButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="RUNNING"
                            android:fontFamily="monospace"
                            android:textColor="@color/theme_text_light"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.05"
                            android:alpha="0.6" />
                    </FrameLayout>
                </LinearLayout>

                <!-- Input Field Box -->
                <FrameLayout
                    android:id="@+id/cardView6"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/input_height"
                    android:background="@drawable/input_field_selector"
                    android:layout_marginBottom="12dp"
                    android:transitionName="phone_card_transition"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                <EditText
                    android:id="@+id/editTextText2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                        android:gravity="center"
                        android:hint="Input Number"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="12dp"
                        android:fontFamily="monospace"
                        android:textColor="@color/theme_primary"
                        android:textColorHint="@color/theme_hint_neon"
                        android:textSize="18sp"
                        android:letterSpacing="0.02"
                        android:background="@android:color/transparent"
                        android:inputType="phone"
                        android:maxLength="13" />
        </FrameLayout>

                <!-- Buttons Row: ACTIVATE and CLEAR -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <!-- Activate Button - Solid Green Background -->
        <FrameLayout
            android:id="@+id/cardView7"
                        android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/button_activate_solid"
                        android:elevation="4dp"
                        android:minWidth="120dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ACTIVATE"
                            android:fontFamily="monospace"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.05" />
                    </FrameLayout>

                    <!-- Clear Button - Outlined Style -->
                    <FrameLayout
                        android:id="@+id/clearButton"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height"
                        android:layout_weight="1"
                        android:background="@drawable/button_clear_outlined"
                        android:elevation="4dp"
                        android:minWidth="80dp"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:id="@+id/clearButtonText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="CLEAR"
                            android:fontFamily="monospace"
                            android:textColor="@color/theme_primary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.05" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
            </FrameLayout>
        </FrameLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Activated State Container -->
    <LinearLayout
        android:id="@+id/activatedTopContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="20dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerSection">

        <!-- Phone Display Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/phoneDisplayCard"
            android:layout_width="match_parent"
            android:layout_height="@dimen/phone_display_height"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="@dimen/phone_display_margin_bottom"
            style="@style/PhoneDisplayCard"
            android:background="#0D00ff88">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/phone_display_padding_horizontal">

            <ImageView
                android:layout_width="@dimen/phone_display_icon_size"
                android:layout_height="@dimen/phone_display_icon_size"
                android:src="@drawable/check"
                app:tint="@color/icon_success_green" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/phone_display_icon_margin_end"
                android:clipChildren="false"
                android:clipToPadding="false">
                
                <TextView
                    android:id="@+id/phoneDisplayText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:text="+91 9876543210"
                    style="@style/PhoneDisplayText" />
            </FrameLayout>
        </LinearLayout>
        
        <!-- Animated Border Overlay for Phone Display Card -->
        <com.example.fast.ui.AnimatedBorderView
            android:id="@+id/phoneDisplayAnimatedBorder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:focusable="false"
            app:cornerRadius="@dimen/phone_display_corner_radius" />
        </androidx.cardview.widget.CardView>

        <!-- Bank Tag Field (BANK card) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/bankTagCard"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bank_tag_height"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="@dimen/bank_tag_margin_bottom"
            style="@style/BankTagCard"
            android:background="#0D00ff88">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/bank_tag_padding_horizontal">

            <!-- Fixed STATUS label on the left -->
            <TextView
                android:id="@+id/statusLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status_label"
                style="@style/BankTagText"
                android:layout_marginEnd="@dimen/bank_tag_arrow_margin_start" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clipChildren="false"
                android:clipToPadding="false">
                
                <TextView
                    android:id="@+id/bankTagText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:text="PENDING"
                    style="@style/BankTagText" />
            </FrameLayout>
        </LinearLayout>
        
        <!-- Animated Border Overlay for Bank Tag Card (Reverse Direction) -->
        <com.example.fast.ui.AnimatedBorderView
            android:id="@+id/bankTagAnimatedBorder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:focusable="false"
            app:cornerRadius="@dimen/bank_tag_corner_radius"
            app:reverseDirection="true" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Instruction Card - Fills remaining space after fixed elements -->
    <androidx.cardview.widget.CardView
        android:id="@+id/insCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/instruction_card_margin_horizontal"
        android:layout_marginTop="@dimen/instruction_card_margin_top"
        android:layout_marginEnd="@dimen/instruction_card_margin_horizontal"
        android:layout_marginBottom="@dimen/instruction_card_margin_bottom"
        android:visibility="gone"
        style="@style/InstructionCardCard"
        android:background="@drawable/crypto_hash_card_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activatedTopContainer">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/instruction_title_margin_start"
                android:layout_marginTop="@dimen/instruction_title_margin_top"
                android:text="Instructions"
                style="@style/InstructionCardTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="@dimen/instruction_divider_height"
                android:layout_marginStart="@dimen/instruction_divider_margin_horizontal"
                android:layout_marginTop="@dimen/instruction_divider_margin_top"
                android:layout_marginEnd="@dimen/instruction_divider_margin_horizontal"
                style="@style/InstructionCardDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView13" />

            <ScrollView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/instruction_content_margin_top"
                android:layout_marginBottom="@dimen/instruction_content_margin_bottom"
                android:fadeScrollbars="false"
                app:layout_constraintBottom_toTopOf="@+id/textView19"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/instruction_content_padding_horizontal"
                    android:paddingBottom="8dp">

                    <!-- Empty State View -->
                    <LinearLayout
                        android:id="@+id/emptyStateLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingVertical="@dimen/instruction_empty_padding_vertical">

                        <ImageView
                            android:id="@+id/emptyStateIcon"
                            android:layout_width="@dimen/instruction_empty_icon_size"
                            android:layout_height="@dimen/instruction_empty_icon_size"
                            android:alpha="@dimen/instruction_empty_icon_alpha"
                            app:tint="@color/text_theme_dark"
                            android:src="@drawable/message" />

                        <TextView
                            android:id="@+id/emptyStateTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/instruction_empty_title_margin_top"
                            android:text="All Set!"
                            style="@style/InstructionCardEmptyTitle" />

                        <TextView
                            android:id="@+id/emptyStateMessage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/instruction_empty_message_margin_top"
                            android:gravity="center"
                            android:text="Your device is activated and ready.\n\nInstructions will appear here when available."
                            style="@style/InstructionCardEmptyMessage" />
                    </LinearLayout>

                    <!-- Instruction Content -->
                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        style="@style/InstructionCardText" />

                    <ImageView
                        android:id="@+id/instructionImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:adjustViewBounds="true"
                        android:visibility="gone" />

                    <VideoView
                        android:id="@+id/instructionVideo"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="16dp"
                        android:visibility="gone" />
                </LinearLayout>
            </ScrollView>

            <TextView
                android:id="@+id/textView19"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/outline_dash"
                android:fontFamily="@font/inter_semibold"
                android:gravity="center"
                android:letterSpacing="0.05"
                android:text="UPLOAD FILE"
                android:textColor="#1976D2"
                android:textSize="13sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        
        <!-- Animated Border Overlay for Instruction Card -->
        <com.example.fast.ui.AnimatedBorderView
            android:id="@+id/instructionAnimatedBorder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:focusable="false"
            app:cornerRadius="@dimen/instruction_card_corner_radius" />
    </androidx.cardview.widget.CardView>

    <!-- Progress overlay -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="true"
        android:elevation="10dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminateTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
