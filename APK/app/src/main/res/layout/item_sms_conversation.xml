<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- SMS Card matching HTML design exactly -->
    <androidx.cardview.widget.CardView
        android:id="@+id/smsCardWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="6dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/smsCardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sms_card_background"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="16dp"
            android:paddingTop="14dp"
            android:paddingEnd="16dp"
            android:paddingBottom="14dp">

            <!-- Avatar with gradient - matching HTML exactly -->
            <androidx.cardview.widget.CardView
                android:id="@+id/contactAvatar"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                android:background="@drawable/avatar_gradient_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:tint="@android:color/white"
                    android:src="@drawable/ic_person" />
            </androidx.cardview.widget.CardView>

            <!-- Text Content - matching HTML flex column with gap -->
            <LinearLayout
                android:id="@+id/textContentLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/timeBadgeContainer"
                app:layout_constraintStart_toEndOf="@id/contactAvatar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <!-- Contact Name Row -->
                <TextView
                    android:id="@+id/contactName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter"
                    android:maxLines="1"
                    android:textColor="#1a1a1a"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:letterSpacing="-0.002" />

                <!-- Last Message -->
                <TextView
                    android:id="@+id/lastMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter"
                    android:maxLines="1"
                    android:textColor="#6e6e73"
                    android:textSize="14sp"
                    android:lineHeight="20sp" />
            </LinearLayout>

            <!-- Time and Badge Container - matching HTML -->
            <LinearLayout
                android:id="@+id/timeBadgeContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/timeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#8e8e93"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/unreadBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/unread_badge_background"
                    android:gravity="center"
                    android:minWidth="22dp"
                    android:minHeight="22dp"
                    android:paddingStart="7dp"
                    android:paddingEnd="7dp"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.002"
                    android:visibility="gone" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>
